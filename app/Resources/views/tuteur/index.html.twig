{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des tuteurs</h1>
    <ul>
        <li>
            <a href="{{ path('tuteur_new') }}" class="waves-effect waves-light btn green"><i class="material-icons left">add</i>Créer un nouveau tuteur</a>
    </ul>
    <table class='striped'>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Fonction</th>
                <th>Présent</th>
                <th>Actions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for tuteur in tuteurs %}
            <tr>
                <td>{{ tuteur.nom }}</td>
                <td>{{ tuteur.prenom }}</td>
                <td>{{ tuteur.email }}</td>
                <td>{{ tuteur.telephone }}</td>
                <td>{{ tuteur.fonction }}</td>
                <td>{% if tuteur.present %}Yes{% else %}No{% endif %}</td>
                <td><a href="{{ path('tuteur_edit', { 'id': tuteur.id }) }}" class="waves-effect waves-light btn orange">Modifier</a></td>
                <td><a href="{{ path('tuteur_show', { 'id': tuteur.id }) }}" class="waves-effect waves-light btn green">Détails</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

