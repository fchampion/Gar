{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tuteur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tuteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ tuteur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ tuteur.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ tuteur.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ tuteur.telephone }}</td>
            </tr>
            <tr>
                <th>Fonction</th>
                <td>{{ tuteur.fonction }}</td>
            </tr>
            <tr>
                <th>Present</th>
                <td>{% if tuteur.present %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tuteur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tuteur_edit', { 'id': tuteur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
