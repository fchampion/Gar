{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails de la personne</h1>
    <table class='striped'>
        <tbody>
            <tr>
                <td colspan="2"><img src="{{ asset("img/profil/") }}{{personne.id}}.{{personne.url}}" height="150" width="150" align="center"/></td>
                    
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ personne.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ personne.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ personne.prenom }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ personne.mail }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>0{{ personne.tel }}</td>
            </tr>
            <tr>
                <th>Date de naisssance</th>
                <td>{% if personne.dateNais %}{{ personne.dateNais|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Excel</th>
                <td>{{ personne.excel }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ personne.statut }}</td>
            </tr>
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('personne_edit', { 'id': personne.id }) }}" class="waves-effect waves-light btn orange"><i class="material-icons right">replay</i>Modifier</a>
        </li>
        </br>
        <li>
            {{ form_start(delete_form) }}
                <button class="btn waves-effect waves-light red darken-2" type="submit" name="Supprimer">Supprimer
                    <i class="material-icons right">delete</i>
                </button>
            {{ form_end(delete_form) }}
        </li>
        </br>
        <li>
            <a href="{{ path('personne_index') }}" class="waves-effect waves-light btn indigo darken-4">Revenir à la liste</a></td>
        </li>
    </ul>
{% endblock %}
