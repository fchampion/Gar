{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des promotions</h1>
    <ul>
        <li>
            <a href="{{ path('promo_new') }}" class="waves-effect waves-light btn green"><i class="material-icons left">add</i>Créer une nouvelle promotion</a>
    </ul>
    <table class='striped'>
        <thead>
            <tr>
                <th>Promo</th>
                <th>Actions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for promo in promos %}
            <tr>
                <td>{{ promo.promo }}</td>
                <td><a href="{{ path('promo_edit', { 'id': promo.id }) }}" class="waves-effect waves-light btn orange">Modifier</a></td>
                <td><a href="{{ path('promo_show', { 'id': promo.id }) }}" class="waves-effect waves-light btn green">Détails</a></td>
                <td><a href="{{ path('promo_conseil', { 'id': promo.id }) }}" class="waves-effect waves-light btn blue">Conseil De Classe</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
