                <th>Permismoto</th>
                <td>{% if rendezvous.permisMoto %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Voiture</th>
                <td>{% if rendezvous.voiture %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Moto</th>
                <td>{% if rendezvous.moto %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Scooter</th>
                <td>{% if rendezvous.scooter %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('rendezvous_edit', { 'id': rendezvous.id }) }}" class="waves-effect waves-light btn orange"><i class="material-icons right">replay</i>Modifier</a>
        </li>
        </br>
        <li>
            {{ form_start(delete_form) }}
                <button class="btn waves-effect waves-light red darken-2" type="submit" name="Supprimer">Supprimer
                    <i class="material-icons right">delete</i>
                </button>
            {{ form_end(delete_form) }}
        </li>
        </br>
        <li>
            <a href="{{ path('rendezvous_index') }}" class="waves-effect waves-light btn indigo darken-4">Revenir à la liste</a></td>
        </li>
    </ul>
{% endblock %}
