{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails du rendez-vous</h1>
   <table class='striped'>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rendezvous.id }}</td>
            </tr>
