{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des rendez-vous</h1>
    <ul>
        <li>
            <a href="{{ path('rendezvous_new') }}" class="waves-effect waves-light btn green"><i class="material-icons left">add</i>Créer un nouveau Rendez-vous</a>
        </li>
    </ul>
    <table class='striped'>
        <thead>
            <tr>
                <th>Date</th>
                <th>Heure</th>
                <th>Durée</th>
                <th>Personne</th> 
                <th></th>               
                <th>Actions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for rendezvous in rendezvouses %}
            <tr>
                <td>{% if rendezvous.date %}{{ rendezvous.date|date('Y-m-d') }}{% endif %}</td>
                <td>{% if rendezvous.date %}{{ rendezvous.date|date('H:i') }}{% endif %}</td>
                <td>{{ rendezvous.duree }}</td>
                 <td>{{ rendezvous.unePersonne.nom }}</td>
                <td><a href="{{ path('rendezvous_edit', { 'id': rendezvous.id }) }}" class="waves-effect waves-light btn orange">Modifier</a></td>
                <td><a href="{{ path('rendezvous_show', { 'id': rendezvous.id }) }}" class="waves-effect waves-light btn green">Détails</a></td>
                <td><a href="" class="waves-effect waves-light btn indigo">Mail</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

