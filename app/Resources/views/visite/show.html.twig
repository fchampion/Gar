{% extends 'base.html.twig' %}

{% block body %}
<h1>Détails de la visite</h1>
    <table class='striped'>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visite.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if visite.date %}{{ visite.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ visite.duree }}</td>
            </tr>
            <tr>
                <th>Obstuteur</th>
                <td>{{ visite.obsTuteur }}</td>
            </tr>
            <tr>
                <th>Ptsaameliorer</th>
                <td>{{ visite.ptsAameliorer }}</td>
            </tr>
            <tr>
                <th>Obsapprenti</th>
                <td>{{ visite.obsApprenti }}</td>
            </tr>
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('visite_edit', { 'id': visite.id }) }}" class="waves-effect waves-light btn orange"><i class="material-icons right">replay</i>Modifier</a>
        </li>
        </br>
        <li>
            {{ form_start(delete_form) }}
                <button class="btn waves-effect waves-light red darken-2" type="submit" name="Supprimer">Supprimer
                    <i class="material-icons right">delete</i>
                </button>
            {{ form_end(delete_form) }}
        </li>
        </br>
        <li>
            <a href="{{ path('visite_index') }}" class="waves-effect waves-light btn indigo darken-4">Revenir à la liste</a></td>
        </li>
    </ul>
{% endblock %}
