{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des visites</h1>
    <ul>
        <li>
            <a href="{{ path('visite_new') }}" class="waves-effect waves-light btn green"><i class="material-icons left">add</i>Créer une nouvelle visite</a>
        </li>
    </ul>
    <table class='striped'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Duree</th>
                <th>Obstuteur</th>
                <th>Ptsaameliorer</th>
                <th>Obsapprenti</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for visite in visites %}
            <tr>
                <td><a href="{{ path('visite_show', { 'id': visite.id }) }}">{{ visite.id }}</a></td>
                <td>{% if visite.date %}{{ visite.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ visite.duree }}</td>
                <td>{{ visite.obsTuteur }}</td>
                <td>{{ visite.ptsAameliorer }}</td>
                <td>{{ visite.obsApprenti }}</td>
                <td><a href="{{ path('visite_edit', { 'id': visite.id }) }}" class="waves-effect waves-light btn orange">Modifier</a></td>
                <td><a href="{{ path('visite_show', { 'id': visite.id }) }}" class="waves-effect waves-light btn green">Détails</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

